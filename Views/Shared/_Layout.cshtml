<!--<!DOCTYPE html> = Instruction to the web browser about what version of HTML: current version is HTML5.-->
<!DOCTYPE html>
<html>
<head>

    <!--Encoding type for HTML page as "Universal Character Set Transformation Format - 8 bits" :-->
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />

    <!--Settings for adaptative design & zoom level :-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!--Load CSS for FontAwesome Icons :-->
    <link href="~/Content/Icons/css/all.css" rel="stylesheet">
    <title>@ViewBag.Title - Modells</title>

    <!--Load the CSS bundles styles :-->
    @Styles.Render("~/Content/css")

    <!--Load the modernizr / jquery / popper bundles scripts.-->
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/popper")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    @{
        var headerPictureCss = "img-fluid col-2 d-inline-block p-0 mt-0";
    }

    @functions{
        
        public int RandomNumber(int min, int max)
        {
            Random random = new Random();
            return random.Next(min, max);
        }
        
    }

</head>
<body>
    <!--Header :-->
    <header class="bg-transparent border border-light d-flex">
        <img src="~/Content/Images/AppPics/CaboSanLucas.jpg" class="@headerPictureCss ml-0" alt="modells" id="toto" />
        <img src="~/Content/Images/AppPics/SunBeams.jpg" class="@headerPictureCss" alt="modells" />
        <img src="~/Content/Images/AppPics/SeaTempest.jpg" class="@headerPictureCss" alt="modells" />
        <img src="~/Content/Images/AppPics/ScubaDiver.jpg" class="@headerPictureCss" alt="modells" />
        <img src="~/Content/Images/AppPics/Recco.jpg" class="@headerPictureCss" alt="modells" />
        <img src="~/Content/Images/AppPics/Landscape.jpg" class="@headerPictureCss" alt="modells" />
    </header>

    <script type="text/javascript">

        var pictureToChange = $("#toto");

        var pictureIndex = 0;

        var picturesLibrary =
        [
            "/Content/Images/AppPics/ScubaDiver.jpg",
            "/Content/Images/AppPics/Landscape.jpg",
            "/Content/Images/AppPics/SunBeams.jpg"
        ];

        pictureToChange.fadeTo(1000, 0.30, function changePicture () {

            pictureIndex = (++pictureIndex >= picturesLibrary.length) ? 0 : pictureIndex;

            pictureToChange.attr('src', picturesLibrary[pictureIndex]);

            setInterval(changePicture, 10000);

            pictureToChange.on('load', function () {

                pictureToChange.fadeTo(500, 1);
            });
        });

    </script>

    <!--Normal Navigation Bar :-->
    <nav class="navbar-expand-lg border border-light" id="normalNavBar">

        <!--Application Logo :-->
        <img src="~/Content/Images/Logos/modells.jpg" class="btn border border-light logobrand" alt="modells" />

        <!--Home button :-->
        <button type="button" class="btn border border-light nav-item m-2 hovering" onclick="location.href='@Url.Action("pictureHome", "Pictures")'" data-toggle="tooltip" data-placement="bottom" title="Accueil">
            <i class="fas fa-home"></i>
        </button>

        <!--Collection button :-->
        <button type="button" class="btn border border-light nav-item m-2 hovering" onclick="location.href='@Url.Action("pictureCollection", "Pictures")'" data-toggle="tooltip" data-placement="bottom" title="Collection">
            <i class="far fa-images"></i>
        </button>

        <!--Add picture button :-->
        <button type="button" class="btn border border-light nav-item m-2 hovering" onclick="location.href='@Url.Action("pictureCreate", "Pictures")'" data-toggle="tooltip" data-placement="bottom" title="Ajouter image">
            <i class="far fa-image"></i>
        </button>
    </nav>

    <!--Mini responsive navigation Bar :-->
    <nav class="navbar-expand-lg border border-light" id="responsiveNavBar">

        <!--Application Logo :-->
        <img src="~/Content/Images/Logos/logo.jpg" class="btn border border-light logobrand" alt="modells" />

        <!--Home button :-->
        <button type="button" class="btn border border-light nav-item m-2 hovering" onclick="location.href='@Url.Action("pictureHome", "Pictures")'" data-toggle="tooltip" data-placement="bottom" title="Accueil">
            <i class="fas fa-home"></i>
        </button>

        <!--Collection button :-->
        <button type="button" class="btn border border-light nav-item m-2 hovering" onclick="location.href='@Url.Action("pictureCollection", "Pictures")'" data-toggle="tooltip" data-placement="bottom" title="Collection">
            <i class="far fa-images"></i>
        </button>

        <!--Add picture button :-->
        <button type="button" class="btn border border-light nav-item m-2 hovering" onclick="location.href='@Url.Action("pictureCreate", "Pictures")'" data-toggle="tooltip" data-placement="bottom" title="Ajouter image">
            <i class="far fa-image"></i>
        </button>
    </nav>

    <!--Main Content :-->
    <main class="border border-light">
        @RenderBody()
    </main>

    <!--Footer :-->
    <footer class="border border-light">
        &copy; @DateTime.Now.Year - Modells
    </footer>

</body>
</html>